general {
        colors = true
        interval = 5
}

order += "tztime local"
order += "disk /"
order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_usage"
order += "cpu_temperature 0"
#order += "load"
order += "volume master"


ipv6 {
        format_up = "%ip"
        format_down = ""
}

wireless _first_ {
        format_up = "ï‡«: %essid %ip"
        format_down = ""
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = ""
}

battery all {
        format = "%status %percentage %remaining (%consumption)"
        hide_seconds = true
        format_down = "ïBAT"
        status_chr = "âš¡"
        status_bat = "ğŸ”‹"
        status_unk = "UNK"
        status_full = "FULL"
        low_threshold = 10
}

tztime local {
        format = "%a %m-%d-%Y %H:%M"
}

load {
        format = "ï‚® %1min"
}

disk "/" {
        format = "ï‚  %avail"
}

