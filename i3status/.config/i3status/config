# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "tztime local"
order += "disk /"
order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_usage"
order += "cpu_temperature 0"
#order += "load"
order += "volume master"


ipv6 {
        format_up = "%ip"
        format_down = ""
}

wireless _first_ {
        format_up = ": %essid %ip"
        format_down = ""
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = ""
}

battery all {
        format = "%status %percentage %remaining (%consumption)"
        hide_seconds = true
        format_down = "BAT"
        status_chr = "⚡"
        status_bat = "🔋"
        status_unk = "UNK"
        status_full = "FULL"
        low_threshold = 10
}

tztime local {
        format = "%a %m-%d-%Y %H:%M"
}

load {
        format = " %1min"
}

disk "/" {
        format = " %avail"
}

cpu_usage {
        format = "CPU: %usage"
        separator = false
}

cpu_temperature 0 {
        format = "%degrees°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
}

volume master {
        format = "♪: %volume"
        format_muted = ": (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
